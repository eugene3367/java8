package sec2;

import java.util.Scanner;

public class BoardEx {

	public static void main(String[] args) {
		Board board1 = new Board();
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("1. 글쓰기 |2. 글수정|3. 글삭제|4. 글검색");
		
		String oper= "";
		oper=scanner.next();
		switch(oper){
			case "1":
				board1.boardWrite();
				System.out.println("1. 글쓰기 |2. 글수정|3. 글삭제|4. 글검색");
				oper=scanner.next();
				
			case "2":
				board1.boardUpdate();
				System.out.println("1. 글쓰기 |2. 글수정|3. 글삭제|4. 글검색");
				oper=scanner.next();
			case "3":
				board1.boardDelete();
				System.out.println("1. 글쓰기 |2. 글수정|3. 글삭제|4. 글검색");
				oper=scanner.next();
			case "4":	
				board1.boardSearch();
				System.out.println("1. 글쓰기 |2. 글수정|3. 글삭제|4. 글검색");
				oper=scanner.next();
			
		
		}
		

		
		
	}

}