package sec1;

/* 쓰레드(Thread) : 현재 실행 중인 프로그램 또는 데이터나 프로세스를 의미하며

 */
public class ThreadEx1 {

	public static void main(String[] args) {
		
		Thread th1 = new Thread(new ThreadWithRunnable());
		th1.run();
		
		ThreadWithClass th2 = new ThreadWithClass();
		th2.run();
		
		ThreadWithClass th3 = new ThreadWithClass();
		th3.start();
		
		Thread th4 = new Thread(new ThreadWithRunnable());
		th4.start();

		
	}

}
		
		
class ThreadWithClass extends Thread {

	@Override
	public void run() {
		for(int i=0;i<5;i++){
			System.out.println(this.getName());
			try {
				Thread.sleep(100);
			} catch (InterruptedException e){
				e.printStackTrace();
			}
			
		}
	}
	
	
}

class ThreadWithRunnable implements Runnable {

	@Override
	public void run() {
		for(int i=0;i<10;i++){
			System.out.println(Thread.currentThread().getName());
			try {
				Thread.sleep(100);
			} catch(InterruptedException e){
				e.printStackTrace();
			}
			
		}
		
	}
	
	
}
		
		
		
		

